## Define a method.
###################### 
#def method_definition($o, $c)
    #if $c.input_arg_info is not None
        #set $input_args = $c.input_arg_info.arg_declaration
    #else
        #set $input_args = None
    #end if
    #if $input_args is not None
AJ_Status ${c.name}_Caller(AJ_BusAttachment* bus, uint32_t sessionId, $input_args)
    #else
AJ_Status ${c.name}_Caller(AJ_BusAttachment* bus, uint32_t sessionId)
    #end if
{
    AJ_Message msg;
    AJ_Status status;
$cc.CommonCheetah.define_arrays_and_structures($c, True, False)
    status = AJ_MarshalMethodCall(bus, &msg, $c.define, g_ServiceName, sessionId, 0, TIMEOUT_METHOD);

$cc.CommonCheetah.handle_error($command_line.runnable, "AJ_MarshalMethodCall", 4)
    #if $input_args is not None
$cc.CommonCheetah.marshal_arguments($command_line.runnable, $c.input_arg_info, "&msg", 4)
    #end if
    status = AJ_DeliverMsg(&msg);

$cc.CommonCheetah.handle_error($command_line.runnable, "AJ_DeliverMsg", 4)
    return status;
}
    #if not $c.no_reply
AJ_Status ${c.name}_ReplyHandler(AJ_Message* msg)
$message_handler($o, $c)#slurp
    #end if
#end def
######################
## Define a property setter.
###################### 
#def property_definition($o, $c)
    #if $c.input_arg_info is not None and $c.input_arg_info.arg_declaration is not None
AJ_Status ${c.name}_Set(AJ_BusAttachment* bus, uint32_t sessionId, $c.input_arg_info.arg_declaration)
{
    AJ_Message msg;
    AJ_Status status;
$cc.CommonCheetah.define_arrays_and_structures($c, True, False)
    status = AJ_MarshalMethodCall(bus, &msg, $c.prop_set_define, g_ServiceName, sessionId, 0, TIMEOUT_METHOD);

$cc.CommonCheetah.handle_error($command_line.runnable, "AJ_MarshalMethodCall", 4)
    status = AJ_MarshalPropertyArgs(&msg, $c.define);

$cc.CommonCheetah.handle_error($command_line.runnable, "AJ_MarshalPropertyArgs", 4)
$cc.CommonCheetah.marshal_arguments($command_line.runnable, $c.input_arg_info, "&msg", 4)
    status = AJ_DeliverMsg(&msg);

$cc.CommonCheetah.handle_error($command_line.runnable, "AJ_DeliverMsg", 4)
    return status;
}
    #end if
    #if not $c.no_reply
AJ_Status ${c.name}_Get(AJ_BusAttachment* bus, uint32_t sessionId)
{
    AJ_Status status;
    AJ_Message msg;

    status = AJ_MarshalMethodCall(bus, &msg, $c.prop_get_define, g_ServiceName, sessionId, 0, TIMEOUT_METHOD);

$cc.CommonCheetah.handle_error($command_line.runnable, "AJ_MarshalMethodCall", 4)
    status = SetPropHandlerReplySerial(PropHandlers$o.get_full_coded_name(),
                                       ${c.name}_GetHandler,
                                       msg.hdr->serialNum);

$cc.CommonCheetah.handle_error($command_line.runnable, "SetPropHandlerReplySerial", 4)
    status = AJ_MarshalPropertyArgs(&msg, $c.define);

$cc.CommonCheetah.handle_error($command_line.runnable, "AJ_MarshalPropertyArgs", 4)
    status = AJ_DeliverMsg(&msg);

$cc.CommonCheetah.handle_error($command_line.runnable, "AJ_DeliverMsg", 4)
    return status;
}
AJ_Status ${c.name}_GetHandler(AJ_Message* msg, void* context)
$message_handler($o, $c)#slurp
    #end if
#end def
######################
## Define a signal.
